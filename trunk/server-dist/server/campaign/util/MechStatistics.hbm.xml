<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="server.campaign.util.MechStatistics"
        table="MechStatistics"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="ID"
            column="ID"
            type="java.lang.Long"
        >
            <generator class="native">
            </generator>
        </id>

        <property
            name="mechSize"
            type="int"
            update="true"
            insert="true"
            access="property"
            column="mechSize"
        />

        <property
            name="gamesPlayed"
            type="int"
            update="true"
            insert="true"
            access="property"
            column="gamesPlayed"
        />

        <property
            name="gamesWon"
            type="int"
            update="true"
            insert="true"
            access="property"
            column="gamesWon"
        />

        <property
            name="timesScrapped"
            type="int"
            update="true"
            insert="true"
            access="property"
            column="timesScrapped"
        />

        <property
            name="lastTimeUpdated"
            type="long"
            update="true"
            insert="true"
            access="property"
            column="lastTimeUpdated"
        />

        <property
            name="modifiedBV"
            type="int"
            update="true"
            insert="true"
            access="property"
            column="modifiedBV"
        />

        <property
            name="originalBV"
            type="int"
            update="true"
            insert="true"
            access="property"
            column="originalBV"
        />

        <property
            name="currentGamesPlayed"
            type="int"
            update="true"
            insert="true"
            access="property"
            column="currentGamesPlayed"
        />

        <property
            name="currentGamesWon"
            type="int"
            update="true"
            insert="true"
            access="property"
            column="currentGamesWon"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-MechStatistics.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
