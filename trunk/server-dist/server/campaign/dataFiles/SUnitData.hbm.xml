<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="server.campaign.dataFiles.SUnitData"
        table="UnitData"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="id"
            type="java.lang.Integer"
        >
            <generator class="native">
            </generator>
        </id>

        <property
            name="BV"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="BV"
        />

        <property
            name="hasDiedInRecentFight"
            type="boolean"
            update="true"
            insert="true"
            access="property"
            column="hasDiedInRecentFight"
        />

        <property
            name="originalBV"
            type="int"
            update="true"
            insert="true"
            access="property"
            column="originalBV"
        />

        <property
            name="scrappableUntil"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="scrappableUntil"
        />

        <property
            name="modelname"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="modelname"
        />

        <property
            name="posId"
            type="int"
            update="true"
            insert="true"
            access="property"
            column="posId"
        />

        <property
            name="producer"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="producer"
        />

        <property
            name="status"
            type="int"
            update="true"
            insert="true"
            access="property"
            column="status"
        />

        <property
            name="type"
            type="int"
            update="true"
            insert="true"
            access="property"
            column="type"
        />

        <property
            name="unitFilename"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="unitFilename"
        />

        <property
            name="weightclass"
            type="int"
            update="true"
            insert="true"
            access="property"
            column="weightclass"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SUnitData.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
